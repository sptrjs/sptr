{
  "name": "sptr",
  "version": "0.0.1",
  "description": "esm cli tools",
  "license": "MIT",
  "bugs": { "url": "https://github.com/sptrjs/sptr/issues" },
  "keywords": [
    "build-tool",
    "sptr"
  ],
  "bind": {
    "sptr": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./index.d.cts",
        "default": "./index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sptr": "./bin/sptr.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm run sptr -w",
    "build": "pnpm run sptr",
    "sptr": "jiti ./src/cli"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/pluginutils": "^5.1.0",
    "cac": "^6.7.14",
    "debug": "^4.3.4",
    "esbuild": "^0.19.9",
    "glob": "^10.3.10",
    "jiti": "^1.21.0",
    "picocolors": "^1.0.0",
    "rollup": "^4.5.1",
    "rollup-plugin-dts": "^6.1.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12"
  }
}
