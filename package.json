{
  "name": "sptr",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.3.1",
  "description": "esm cli tools",
  "license": "MIT",
  "keywords": [
    "build-tool",
    "sptr"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sptr": "./bin/sptr.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "pnpm run sptr -w",
    "build": "pnpm run sptr",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "sptr": "jiti ./src/cli --noCjs"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/pluginutils": "^5.1.0",
    "cac": "^6.7.14",
    "debug": "^4.3.4",
    "esbuild": "^0.19.9",
    "glob": "^10.3.10",
    "jiti": "^1.21.0",
    "picocolors": "^1.0.0",
    "rollup": "^4.5.1",
    "rollup-plugin-dts": "^6.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.5",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.10.4",
    "eslint": "^8.0.1",
    "typescript": "^5.3.3",
    "vitepress": "1.0.0-rc.31",
    "vitest": "^1.0.4"
  }
}
